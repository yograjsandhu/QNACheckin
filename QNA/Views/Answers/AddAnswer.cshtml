@model QNA.Models.Answer

@{
    ViewData["Title"] = "";
}



<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                <select asp-for="QuestionId" class ="form-control" asp-items="ViewBag.QuestionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AnswerText" class="control-label"></label>
                <input asp-for="AnswerText" class="form-control" />
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerDateAndTime" class="control-label"></label>
                <input asp-for="AnswerDateAndTime" class="form-control" />
                <span asp-validation-for="AnswerDateAndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpVote" class="control-label"></label>
                <input asp-for="UpVote" class="form-control" />
                <span asp-validation-for="UpVote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DownVote" class="control-label"></label>
                <input asp-for="DownVote" class="form-control" />
                <span asp-validation-for="DownVote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="AddAnswer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
